<%- include('comunes/header',{titulo:'Crear Sensor'}) %>


<br>
<br>

<div class="container">
    <% var creando = typeof sensor === "undefined" ? true : false; %>

    <h1> <%= creando ? 'Crear' : 'Actualizar' %> Sensor</h1>
    <p><%= creando ? 'Creando' : 'Actualizando' %> un sensor.</p>

    <form action="/Sensor/<%= creando ? 'crear' : 'actualizar' %>-sensores/<%= creando ? '' : sensor.id %>"
          method="POST">
        <div class="row">
            <div class="col-sm-3">

                <label for="codigoSensor">Sensor</label>
            </div>
            <div class="col-sm-6">
                <input id="codigoSensor"
                       value="<%= creando ? '' : sensor.codigoSensor %>"
                       name="codigoSensor" type="text">
            </div>

        </div>


        <div class="row">
            <div class="col-sm-3">

                <label for="subparcela">Subparcela</label>
            </div>
            <div class="col-sm-6">
                <select class="custom-select" id=subparcela name="subparcela">
                    <option selected>Subparcela...</option>
                    <% arregloSubparcelas.forEach((subparcela)=>{ %>
                        <option value=<%= subparcela.id %>>
                            <%= subparcela.codigo %>
                        </option>

                    <% }) %>
                </select>
            </div>

        </div>


        <div class="col-sm-3">

            <button class="btn btn-outline-info btn-block btn-espaciado" type="reset">Resetear formulario</button>


        </div>


        <div class="row">
            <div class="col-sm-6">

                <button class="btn btn-outline-success btn-espaciado btn-block"
                        onclick="validarNombre(event)"><%= creando ? 'Crear' : 'Actualizar' %> Sensor
                </button>
            </div>

        </div>

    </form>
    <div class="row">
        <div class="col-sm-6">


            <a href="/Sensor/sensor">
                <button class="btn btn-outline-danger btn-block btn-espaciado">Regresar</button>
            </a>
        </div>

    </div>


</div>
<br>


<%- include('comunes/librerias') %>
<%- include('comunes/footer') %>

