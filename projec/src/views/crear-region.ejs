<body>
<div class="container">
    <% var creando = typeof region === "undefined" ? true : false; %>

    <h1> <%= creando ? 'Crear' : 'Actualizar' %> Region</h1>
    <p><%= creando ? 'Creando' : 'Actualizando' %> un region.</p>

    <form action="/Region/<%= creando ? 'crear' : 'actualizar' %>-region/<%= creando ? '' : region.id %>"
          method="POST">
        <div class="row">
            <div class="col-sm-3">

                    <label for="region" >Region</label>
            </div>
                    <div class="col-sm-6">
                    <input id="region"
                           value="<%= creando ? '' : region.nombre %>"
                           name="region" type="text">
                    </div>

        </div>

        <div class="row">
            <div class="col-sm-3">

                    <label for="descripcion">Descripcion</label>
            </div>
            <div class="col-sm-6">
                    <textarea name="descripcion"
                              id="descripcion"
                              cols="30"
                              rows="3"><%= creando ? '' : region.descripcion %>
                    </textarea>
            </div>

            <div class="col-sm-3">

                <button class="btn btn-outline-info btn-block btn-espaciado" type="reset">Resetear formulario</button>


            </div>

        </div>

        <div class="row">
            <div class="col-sm-3">

                <button  class="btn btn-outline-success btn-espaciado btn-block" onclick="validarNombre(event)"><%= creando ? 'Crear' : 'Actualizar' %> Region</button>
            </div>
            <div class="col-sm-3">

                <button class="btn btn-outline-danger btn-block btn-espaciado" href="/region"> Regresar</button>
            </div>
        </div>

    </form>











</div>

