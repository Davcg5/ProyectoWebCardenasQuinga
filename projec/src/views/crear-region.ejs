        // 1) Revisar el campo no este vacio
        // 2) Revisar el campo tenga 3 char
        const inputNombre = document
            .getElementById("nombre");
        const nombre = inputNombre.value;
        if (nombre.length < 3) {
            event.preventDefault()
            alert('Tu nombre es muy corto')
        }else{

        }

    }
</script>

