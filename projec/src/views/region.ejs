<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Region</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <link rel="stylesheet"
          href="/bootstrap-4.0.0-dist/css/animate.css">

 </head>
<body>
<div class="container">




    <form action="/Region/" method="get">
        <div class="row">
            <div class="col-sm-9">

                <div class="form-group">
                    <label for="busqueda">Busqueda</label>
                    <input id="busqueda"
                           type="text"
                           class="form-control"
                           name="busqueda">
                </div>

            </div>
            <div class="col-sm-3">

                <button class="btn btn-outline-info btn-block btn-buscar"
                        type="submit">Buscar</button>

            </div>
        </div>
    </form>

    <div class="row">
        <div class="col-sm-9"></div>
        <div class="col-sm-3">
            <a class="quitar-decoracion" href="/Region/crear-region">
                <button class="btn btn-outline-success btn-espaciado btn-block">
                    Crear Region
                </button>
            </a>
        </div>
    </div>
    <h2> Arreglo </h2>




    <table class="table table-hover animated fadeInUp">
        <caption>Lista de Regiones</caption>
        <!-- tr -> table row -->
        <thead>
        <tr>
            <!-- th -> table header -->
            <th width="30%">Nombre</th>
            <th width="50%">Descripcion</th>

            <th width="20%">Acciones</th>
        </tr>
        </thead>
        <!-- tr -> table row -->
        <tbody>
        <% arreglo.forEach((region)=>{ %>
            <tr>
                <!-- td -> table detail -->
                <td><%= region.nombre %></td>
                <td><%= region.descripcion %></td>

                <td>
                    <form action="/Region/borrar/<%= region.id %>"
                          method="post"
                    >
                        <!--<button type="button">Yo no</button>-->
                        <!--<button>Yo si</button>-->
                        <button type="submit"
                                class="btn btn-outline-danger btn-block btn-espaciado"
                                onclick="borrar(event)">Eliminar
                        </button>
                    </form>
                    <a class="quitar-decoracion" href="/Region/actualizar-region/<%= region.id %>">
                        <button class="btn btn-outline-info btn-block btn-espaciado"
                                type="button">
                            Actualizar
                        </button>
                    </a>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>


</div>
<% var creando = typeof region === "undefined" ? true : false; %>
</div>



</body>
</html>